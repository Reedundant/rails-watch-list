<h2><%= @list.name %></h2>
<%= link_to "Create Bookmark!", new_list_bookmark_path(@list), class: "btn btn-flat" %>
<ul>
  <% @list.bookmarks.each do |b|%>
  <li>
   <%= b.comment %>
  <%= link_to "Delete",
        bookmark_path(b),
        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </li>
  <% end  %>
</ul>
<%= link_to "Back to our terrible lists", lists_path %>
